@model HospitalSystem.Models.Appointment

@{
    ViewBag.Title = "Edit";
}

<!-- rollere göre değişmeli -->
<header>
    <h1>Hasta Portalı</h1>
    <nav>
        <a href="#ozel-sayfa">Özel Sayfa</a>
        <a href="#randevu-al">Randevu Al</a>
        <a href="#randevular">Randevular</a>
        <a href="#recete-goruntule">Reçete Görüntüle</a>
        <a href="#odeme">Ödeme</a>
        <a href="#iade">İade</a>
        <a href="#odeme-gecmisi">Ödeme Geçmişi</a>
        <a href="#sifre-yonetimi">Şifre Yönetimi</a>
    </nav>
</header>

<section id="randevu-al-container">
    <h2 class="container-header">Randevu Al</h2>
    <div class="randevu-al">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <label for="doktor-id">Doktor Adı</label>
                @Html.DropDownList("Doctor_ID")
                @Html.ValidationMessageFor(model => model.Doctor_ID, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="randevu-tarihi">Randevu Tarihi</label>
                @Html.TextBoxFor(model => model.AppointmentDate, "{0:yyyy-MM-ddTHH:mm:ss}", new
           {
               @class = "form-control",
               required = "required",
               @type = "datetime-local"
           })
                @Html.ValidationMessageFor(model => model.AppointmentDate, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="randevu-sebebi">Randevu Sebebi</label>
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input id="btn" type="submit" value="Randevu Al">
            </div>
        }
    </div>
</section>
